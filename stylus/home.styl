@media only screen and (max-width: 700px)
    .ui.fixed.menu
        display: none !important

    .secondary.pointing.menu
        .item, .menu
            display: none

        .toc.item
            display: block

    .masthead
        &.segment
            min-height: 350px

        h1.ui.header
            font-size: 2em
